<Page
    x:Class="Demo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Demo"
    xmlns:md="using:RichMarkdownBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock Text="Markdown Control:"/>
        <md:MarkdownEditControl x:Name="con"/>
        <Button Click="Button_Click" Content="Get Markdown from the Markdown Control and put it into the TextBox"/>
        <Button Click="Button_Click_1" Content="Get Markdown formatted text from the TextBox and put it into the Markdown Control"/>
        <TextBox Header="TextBox:" x:Name="testBox"/>
    </StackPanel>
</Page>
